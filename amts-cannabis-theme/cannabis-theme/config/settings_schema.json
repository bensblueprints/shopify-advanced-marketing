      },
      {
        "type": "text",
        "id": "age_gate_confirm_text",
        "label": "Confirm Button Text",
        "default": "Yes, I'm 21+"
      },
      {
        "type": "text",
        "id": "age_gate_deny_text",
        "label": "Deny Button Text",
        "default": "No, I'm Under 21"
      },
      {
        "type": "url",
        "id": "age_gate_deny_redirect",
        "label": "Redirect URL for Denied Users",
        "info": "Where to send visitors who are not of legal age"
