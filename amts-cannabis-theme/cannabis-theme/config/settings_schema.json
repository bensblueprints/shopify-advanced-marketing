        "max": 365,
        "step": 1,
        "unit": "days",
        "label": "Remember Verification For",
        "default": 30,
        "info": "Number of days to remember the visitor's verification"
      },
      {
        "type": "header",
        "content": "Age Gate Content"
      },
      {
        "type": "image_picker",
        "id": "age_gate_logo",
        "label": "Age Gate Logo",
        "info": "Displayed on the age verification modal"
      },
      {
