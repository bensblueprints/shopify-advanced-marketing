      font-weight: 500;
      color: var(--color-text, #ffffff);
      -moz-appearance: textfield;
    }

    .cart-drawer__qty-input::-webkit-outer-spin-button,
    .cart-drawer__qty-input::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }

    .cart-drawer__item-price {
      display: flex;
      flex-direction: column;
      align-items: flex-end;
      gap: 0.25rem;
    }

    .cart-drawer__item-line-price {
      font-size: 0.9375rem;
      font-weight: 600;
      color: var(--color-text, #ffffff);
    }

    .cart-drawer__item-original-price {
      font-size: 0.75rem;
      color: var(--color-text-muted, #9ca3af);
      text-decoration: line-through;
    }

    .cart-drawer__item-remove {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 28px;
      height: 28px;
      margin-top: auto;
      background: none;
      border: none;
      color: var(--color-text-muted, #9ca3af);
      cursor: pointer;
      transition: color 0.2s ease;
    }

    .cart-drawer__item-remove:hover {
      color: #ef4444;
    }

    /* Empty cart */
    .cart-drawer__empty {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding: 3rem 1.5rem;
      height: 100%;
    }

    .cart-drawer__empty-icon {
      width: 100px;
      height: 100px;
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: rgba(255, 255, 255, 0.05);
      border-radius: 50%;
      margin-bottom: 1.5rem;
      color: var(--color-text-muted, #9ca3af);
    }

    .cart-drawer__empty-title {
      font-family: var(--font-heading, 'Poppins', sans-serif);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text, #ffffff);
      margin: 0 0 0.5rem 0;
    }

    .cart-drawer__empty-text {
      font-size: 0.9375rem;
      color: var(--color-text-muted, #9ca3af);
      margin: 0 0 1.5rem 0;
    }

    /* Footer */
    .cart-drawer__footer {
      padding: 1.25rem 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      background-color: var(--color-background, #0f0f1a);
    }

    .cart-drawer__age-reminder {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem;
      background-color: rgba(16, 185, 129, 0.1);
      border: 1px solid rgba(16, 185, 129, 0.2);
      border-radius: var(--border-radius-small, 8px);
      margin-bottom: 1rem;
      font-size: 0.75rem;
      color: var(--color-primary, #10b981);
    }

    .cart-drawer__subtotal {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.5rem;
    }

    .cart-drawer__subtotal-label {
      font-size: 1rem;
      color: var(--color-text-muted, #9ca3af);
    }

    .cart-drawer__subtotal-price {
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text, #ffffff);
    }

    .cart-drawer__discounts {
      margin-bottom: 0.5rem;
    }

    .cart-drawer__discount {
      display: flex;
      justify-content: space-between;
      font-size: 0.875rem;
      color: var(--color-primary, #10b981);
    }

    .cart-drawer__note {
      font-size: 0.75rem;
      color: var(--color-text-muted, #9ca3af);
      margin: 0 0 1rem 0;
    }

    .cart-drawer__actions {
      display: flex;
      gap: 0.75rem;
    }

    .cart-drawer__actions .btn {
      flex: 1;
    }

    .cart-drawer__checkout {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .cart-drawer__recommendations {
      margin-top: 1.5rem;
      padding-top: 1.5rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Strain badge colors in cart */
    .strain-badge--indica { background-color: var(--color-indica, #8b5cf6); }
    .strain-badge--sativa { background-color: var(--color-sativa, #f97316); }
    .strain-badge--hybrid { background-color: var(--color-hybrid, #22c55e); }
    .strain-badge--cbd { background-color: var(--color-cbd, #3b82f6); }
    .strain-badge--thca { background-color: var(--color-thca, #eab308); }
    .strain-badge--delta-9-hemp { background-color: var(--color-delta9, #06b6d4); }

    /* Responsive */
    @media (max-width: 480px) {
      .cart-drawer__container {
        max-width: 100%;
      }

      .cart-drawer__item {
        flex-wrap: wrap;
      }

      .cart-drawer__item-price {
        width: 100%;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.5rem;
        padding-top: 0.5rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      .cart-drawer__actions {
        flex-direction: column;
      }
    }
  </style>

  <script>
    (function() {
      const drawer = document.getElementById('cart-drawer');
      if (!drawer) return;

      const overlay = drawer.querySelector('.cart-drawer__overlay');
      const container = drawer.querySelector('.cart-drawer__container');

      // Open cart drawer
      function openCart() {
        drawer.classList.add('is-open');
        drawer.setAttribute('aria-hidden', 'false');
        document.body.style.overflow = 'hidden';
        container.focus();
      }

      // Close cart drawer
      function closeCart() {
        drawer.classList.remove('is-open');
        drawer.setAttribute('aria-hidden', 'true');
        document.body.style.overflow = '';
      }

      // Toggle cart drawer
      function toggleCart() {
        if (drawer.classList.contains('is-open')) {
          closeCart();
        } else {
          openCart();
        }
      }

      // Close button and overlay click
      document.querySelectorAll('[data-cart-close]').forEach(function(el) {
        el.addEventListener('click', closeCart);
      });

      // Cart icon click
      document.querySelectorAll('[data-cart-toggle]').forEach(function(el) {
        el.addEventListener('click', function(e) {
          e.preventDefault();
          toggleCart();
        });
      });

      // Escape key to close
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && drawer.classList.contains('is-open')) {
          closeCart();
        }
      });

      // Update cart via AJAX
      function updateCart(key, quantity) {
        fetch('/cart/change.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ id: key, quantity: quantity }),
        })
        .then(function(response) { return response.json(); })
        .then(function(cart) {
          refreshCartDrawer();
        })
        .catch(function(error) {
          console.error('Error updating cart:', error);
        });
      }

      // Refresh cart drawer content
      function refreshCartDrawer() {
        fetch('/?sections=cart-drawer-content')
        .then(function(response) { return response.json(); })
        .then(function(sections) {
          // Update cart content if section exists
          if (sections['cart-drawer-content']) {
            const itemsContainer = document.getElementById('cart-drawer-items');
            if (itemsContainer) {
              const temp = document.createElement('div');
              temp.innerHTML = sections['cart-drawer-content'];
              const newItems = temp.querySelector('#cart-drawer-items');
              if (newItems) {
                itemsContainer.innerHTML = newItems.innerHTML;
              }
            }
          }
        })
        .catch(function(error) {
          // Fallback: reload page
          window.location.reload();
        });
      }

      // Quantity buttons
      document.addEventListener('click', function(e) {
        const decrease = e.target.closest('[data-decrease]');
        const increase = e.target.closest('[data-increase]');
        const remove = e.target.closest('[data-remove]');

        if (decrease) {
          const key = decrease.dataset.decrease;
          const input = document.querySelector('[data-quantity-input="' + key + '"]');
          const newQty = Math.max(0, parseInt(input.value) - 1);
          updateCart(key, newQty);
        }

        if (increase) {
          const key = increase.dataset.increase;
          const input = document.querySelector('[data-quantity-input="' + key + '"]');
          const newQty = parseInt(input.value) + 1;
          updateCart(key, newQty);
        }

        if (remove) {
          const key = remove.dataset.remove;
          updateCart(key, 0);
        }
      });

      // Quantity input change
      document.addEventListener('change', function(e) {
        if (e.target.matches('[data-quantity-input]')) {
          const key = e.target.dataset.quantityInput;
          const newQty = Math.max(0, parseInt(e.target.value) || 0);
          updateCart(key, newQty);
        }
      });

      // Expose globally for add-to-cart forms
      window.CartDrawer = {
        open: openCart,
        close: closeCart,
        toggle: toggleCart,
        refresh: refreshCartDrawer
      };

      // Auto-open on add to cart (if setting enabled)
      document.addEventListener('cart:add', function() {
        {% if settings.atc_notification_type == 'drawer' %}
          openCart();
        {% endif %}
      });
    })();
  </script>
{% endif %}
