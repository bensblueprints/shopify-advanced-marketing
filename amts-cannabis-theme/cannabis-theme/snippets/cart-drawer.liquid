      flex: 1;
      overflow-y: auto;
      padding: 1rem;
    }

    .cart-drawer__items {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .cart-drawer__item {
      display: flex;
      gap: 1rem;
      padding: 1rem;
      background-color: rgba(255, 255, 255, 0.03);
      border-radius: var(--border-radius-medium, 12px);
      transition: background-color 0.2s ease;
    }

    .cart-drawer__item:hover {
      background-color: rgba(255, 255, 255, 0.05);
    }

    .cart-drawer__item-image {
      position: relative;
      width: 80px;
      height: 80px;
      flex-shrink: 0;
      border-radius: var(--border-radius-small, 8px);
      overflow: hidden;
      background-color: rgba(255, 255, 255, 0.05);
    }

    .cart-drawer__item-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .cart-drawer__item-placeholder {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-text-muted, #9ca3af);
    }

    .cart-drawer__item-strain {
      position: absolute;
      bottom: 4px;
      left: 4px;
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.625rem;
      font-weight: 700;
      text-transform: uppercase;
      color: white;
    }

    .cart-drawer__item-details {
      flex: 1;
      min-width: 0;
    }

    .cart-drawer__item-title {
      display: block;
      font-size: 0.9375rem;
      font-weight: 500;
      color: var(--color-text, #ffffff);
      text-decoration: none;
      margin-bottom: 0.25rem;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .cart-drawer__item-title:hover {
      color: var(--color-primary, #10b981);
    }

    .cart-drawer__item-variant {
      font-size: 0.8125rem;
      color: var(--color-text-muted, #9ca3af);
      margin: 0 0 0.5rem 0;
    }

    .cart-drawer__item-potency {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 0.5rem;
    }

    .cart-drawer__item-potency .potency-badge {
      padding: 0.125rem 0.375rem;
      font-size: 0.625rem;
    }

    .cart-drawer__item-quantity {
      display: inline-flex;
      align-items: center;
      background-color: rgba(255, 255, 255, 0.05);
      border-radius: var(--border-radius-small, 8px);
      overflow: hidden;
    }

    .cart-drawer__qty-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 28px;
      height: 28px;
      background: none;
      border: none;
      color: var(--color-text-muted, #9ca3af);
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .cart-drawer__qty-btn:hover {
      background-color: rgba(255, 255, 255, 0.1);
      color: var(--color-text, #ffffff);
    }

