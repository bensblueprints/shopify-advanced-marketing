{% comment %}
  Cart Drawer Snippet
  Slide-out cart drawer with cannabis product info display.
  Uses theme settings for cart type and compliance options.
{% endcomment %}

{% assign cart_type = settings.cart_type | default: 'drawer' %}
{% if cart_type == 'drawer' %}
  <div id="cart-drawer" class="cart-drawer" aria-hidden="true">
    <div class="cart-drawer__overlay" data-cart-close></div>
    <div class="cart-drawer__container" role="dialog" aria-modal="true" aria-labelledby="cart-drawer-title">
      <div class="cart-drawer__header">
        <h2 id="cart-drawer-title" class="cart-drawer__title">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
          Your Cart
          <span class="cart-drawer__count">({{ cart.item_count }})</span>
        </h2>
        <button type="button" class="cart-drawer__close" data-cart-close aria-label="Close cart">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>

      <div class="cart-drawer__body" id="cart-drawer-items">
        {% if cart.item_count > 0 %}
          <ul class="cart-drawer__items">
            {% for item in cart.items %}
              {% assign strain_type = item.product.metafields.cannabis.strain_type %}
              {% assign thc = item.product.metafields.cannabis.thc_percentage %}
              {% assign cbd = item.product.metafields.cannabis.cbd_percentage %}
              {% assign product_grade = item.product.metafields.cannabis.product_grade %}

              <li class="cart-drawer__item" data-line-item="{{ item.key }}">
                <div class="cart-drawer__item-image">
                  {% if item.image %}
                    <img
                      src="{{ item.image | image_url: width: 120 }}"
                      alt="{{ item.image.alt | default: item.product.title }}"
                      width="60"
                      height="60"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="cart-drawer__item-placeholder">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                        <circle cx="8.5" cy="8.5" r="1.5"/>
                        <polyline points="21,15 16,10 5,21"/>
                      </svg>
                    </div>
                  {% endif %}

                  {% if strain_type != blank %}
                    {% assign strain_class = strain_type | downcase | replace: ' ', '-' %}
                    <span class="cart-drawer__item-strain strain-badge--{{ strain_class }}">
                      {{ strain_type | slice: 0, 3 }}
                    </span>
                  {% endif %}
                </div>

                <div class="cart-drawer__item-details">
                  <a href="{{ item.url }}" class="cart-drawer__item-title">{{ item.product.title }}</a>

                  {% if item.variant.title != 'Default Title' %}
                    <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
                  {% endif %}

                  {% if settings.cart_show_potency_summary %}
                    <div class="cart-drawer__item-potency">
                      {% if thc != blank %}
                        <span class="potency-badge potency-badge--thc">THC {{ thc }}%</span>
                      {% endif %}
                      {% if cbd != blank %}
                        <span class="potency-badge potency-badge--cbd">CBD {{ cbd }}%</span>
                      {% endif %}
                    </div>
                  {% endif %}

                  <div class="cart-drawer__item-quantity">
                    <button type="button" class="cart-drawer__qty-btn" data-decrease="{{ item.key }}" aria-label="Decrease quantity">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"/>
                      </svg>
                    </button>
                    <input
                      type="number"
                      value="{{ item.quantity }}"
                      min="1"
                      class="cart-drawer__qty-input"
                      data-quantity-input="{{ item.key }}"
                      aria-label="Quantity for {{ item.product.title }}"
                    >
                    <button type="button" class="cart-drawer__qty-btn" data-increase="{{ item.key }}" aria-label="Increase quantity">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"/>
                        <line x1="5" y1="12" x2="19" y2="12"/>
                      </svg>
                    </button>
                  </div>
                </div>

                <div class="cart-drawer__item-price">
                  <span class="cart-drawer__item-line-price">{{ item.final_line_price | money }}</span>
                  {% if item.original_line_price > item.final_line_price %}
                    <span class="cart-drawer__item-original-price">{{ item.original_line_price | money }}</span>
                  {% endif %}
                  <button type="button" class="cart-drawer__item-remove" data-remove="{{ item.key }}" aria-label="Remove {{ item.product.title }}">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="3,6 5,6 21,6"/>
                      <path d="M19,6v14a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6m3,0V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"/>
                      <line x1="10" y1="11" x2="10" y2="17"/>
                      <line x1="14" y1="11" x2="14" y2="17"/>
                    </svg>
                  </button>
                </div>
              </li>
            {% endfor %}
          </ul>
        {% else %}
          <div class="cart-drawer__empty">
            <div class="cart-drawer__empty-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="9" cy="21" r="1"/>
                <circle cx="20" cy="21" r="1"/>
                <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
              </svg>
            </div>
            <h3 class="cart-drawer__empty-title">Your cart is empty</h3>
            <p class="cart-drawer__empty-text">Browse our collection and find the perfect strain for you.</p>
            <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary" data-cart-close>
              Shop Now
            </a>
          </div>
        {% endif %}
      </div>

      {% if cart.item_count > 0 %}
        <div class="cart-drawer__footer">
          {% if settings.cart_show_age_reminder %}
            <div class="cart-drawer__age-reminder">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
              <span>{{ settings.cart_age_reminder_text | default: 'By proceeding, you confirm you are 21 years or older.' }}</span>
            </div>
          {% endif %}

          <div class="cart-drawer__subtotal">
            <span class="cart-drawer__subtotal-label">Subtotal</span>
            <span class="cart-drawer__subtotal-price">{{ cart.total_price | money }}</span>
          </div>

          {% if cart.cart_level_discount_applications.size > 0 %}
            <div class="cart-drawer__discounts">
              {% for discount in cart.cart_level_discount_applications %}
                <div class="cart-drawer__discount">
                  <span class="cart-drawer__discount-name">{{ discount.title }}</span>
                  <span class="cart-drawer__discount-amount">-{{ discount.total_allocated_amount | money }}</span>
                </div>
              {% endfor %}
            </div>
          {% endif %}

          <p class="cart-drawer__note">Shipping, taxes, and discount codes calculated at checkout.</p>

          <div class="cart-drawer__actions">
            <a href="{{ routes.cart_url }}" class="btn btn-secondary">View Cart</a>
            <button type="submit" name="checkout" class="btn btn-primary cart-drawer__checkout" form="cart-form">
              Checkout
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"/>
                <polyline points="12,5 19,12 12,19"/>
              </svg>
            </button>
          </div>

          {% if settings.cart_show_recommendations %}
            <div class="cart-drawer__recommendations" id="cart-recommendations">
              <!-- Recommendations loaded via AJAX -->
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>

  <form id="cart-form" action="{{ routes.cart_url }}" method="post" style="display: none;">
    <input type="hidden" name="checkout" value="">
  </form>

  <style>
    .cart-drawer {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: var(--z-modal, 500);
      pointer-events: none;
      visibility: hidden;
    }

    .cart-drawer.is-open {
      pointer-events: auto;
      visibility: visible;
    }

    .cart-drawer__overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .cart-drawer.is-open .cart-drawer__overlay {
      opacity: 1;
    }

    .cart-drawer__container {
      position: absolute;
      top: 0;
      right: 0;
      width: 100%;
      max-width: 420px;
      height: 100%;
      background-color: var(--color-background-secondary, #1a1a2e);
      display: flex;
      flex-direction: column;
      transform: translateX(100%);
      transition: transform 0.3s ease;
      box-shadow: -10px 0 30px rgba(0, 0, 0, 0.3);
    }

    .cart-drawer.is-open .cart-drawer__container {
      transform: translateX(0);
    }

    .cart-drawer__header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .cart-drawer__title {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-family: var(--font-heading, 'Poppins', sans-serif);
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--color-text, #ffffff);
      margin: 0;
    }

    .cart-drawer__title svg {
      color: var(--color-primary, #10b981);
    }

    .cart-drawer__count {
      font-weight: 400;
      font-size: 1rem;
      color: var(--color-text-muted, #9ca3af);
    }

    .cart-drawer__close {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      background: none;
      border: none;
      border-radius: var(--border-radius-small, 8px);
      color: var(--color-text-muted, #9ca3af);
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .cart-drawer__close:hover {
      background-color: rgba(255, 255, 255, 0.1);
      color: var(--color-text, #ffffff);
    }

