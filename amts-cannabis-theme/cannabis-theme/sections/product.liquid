{% comment %}
  Cannabis Product Page
  Enhanced product template with cannabis-specific information
{% endcomment %}

<div class="product-page-wrapper">
  <div class="product-main">
    <div class="product-media">
      <div class="product-gallery">
        {% if product.images.size > 0 %}
          <div class="gallery-main">
            <img 
              id="main-product-image" 
              src="{{ product.featured_image | img_url: '800x' }}" 
              alt="{{ product.title }}"
              loading="eager"
            >
          </div>
          
          {% if product.images.size > 1 %}
            <div class="gallery-thumbnails">
              {% for image in product.images %}
                <img 
                  src="{{ image | img_url: '150x' }}" 
                  alt="{{ product.title }}"
                  class="thumbnail {% if forloop.first %}active{% endif %}"
                  onclick="changeMainImage('{{ image | img_url: '800x' }}')"
                  loading="lazy"
                >
              {% endfor %}
            </div>
          {% endif %}
        {% else %}
          <div class="gallery-main">
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      </div>
    </div>

    <div class="product-details">
      <h1 class="product-title">{{ product.title }}</h1>
      
      {% if product.vendor %}
        <p class="product-vendor">By {{ product.vendor }}</p>
      {% endif %}

      <div class="product-price-section">
        <span class="product-price">{{ product.selected_or_first_available_variant.price | money }}</span>
        {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
          <span class="product-compare-price">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
          <span class="product-savings">
            Save {{ product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price | money }}
          </span>
        {% endif %}
      </div>

      {% if product.available %}
        <p class="product-availability in-stock">✓ In Stock</p>
      {% else %}
        <p class="product-availability out-of-stock">Out of Stock</p>
      {% endif %}

      <div class="product-description">
        {{ product.description }}
      </div>

      <div class="product-form-wrapper">
        {% form 'product', product, id: 'product-form' %}
          {% assign current_variant = product.selected_or_first_available_variant %}

          {% if product.variants.size > 1 %}
            <div class="product-options">
              <label for="variant-select">{{ section.settings.variant_label | default: 'Size' }}</label>
              <select name="id" id="variant-select" class="variant-select">
                {% for variant in product.variants %}
                  <option
                    value="{{ variant.id }}"
                    {% if variant == current_variant %}selected="selected"{% endif %}
                    {% unless variant.available %}disabled{% endunless %}
                  >
                    {{ variant.title }} - {{ variant.price | money }}
                    {% unless variant.available %} (Sold Out){% endunless %}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% else %}
            <input type="hidden" name="id" value="{{ current_variant.id }}">
          {% endif %}

          <div class="quantity-wrapper">
            <label for="quantity">Quantity</label>
            <div class="quantity-selector">
              <button type="button" onclick="decreaseQuantity()" class="qty-btn">−</button>
              <input type="number" id="quantity" name="quantity" min="1" value="1" class="quantity-input">
              <button type="button" onclick="increaseQuantity()" class="qty-btn">+</button>
            </div>
          </div>

          <button 
            type="submit" 
            name="add" 
            class="btn-add-to-cart"
            {% unless current_variant.available %}disabled{% endunless %}
          >
            {% if current_variant.available %}
              Add to Cart - {{ current_variant.price | money }}
            {% else %}
              Sold Out
            {% endif %}
          </button>

          {{ form | payment_button }}
        {% endform %}
      </div>

      {% if section.settings.show_share_buttons %}
        <div class="product-share">
          <span>Share:</span>
          <a href="https://www.facebook.com/sharer.php?u={{ shop.url }}{{ product.url }}" target="_blank" rel="noopener" aria-label="Share on Facebook">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/></svg>
          </a>
          <a href="https://twitter.com/intent/tweet?url={{ shop.url }}{{ product.url }}&text={{ product.title }}" target="_blank" rel="noopener" aria-label="Share on Twitter">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/></svg>
          </a>
        </div>
      {% endif %}
    </div>
  </div>

  {% comment %} Cannabis-specific information {% endcomment %}
  {% render 'cannabis-info', product: product %}

  {% comment %} Related products {% endcomment %}
  {% if section.settings.show_related_products %}
    <div class="related-products">
      <h2>You May Also Like</h2>
      <div class="product-grid">
        {% assign related_products = product.collections.first.products | where_not: "id", product.id | limit: 4 %}
        {% for related in related_products %}
          <a href="{{ related.url }}" class="product-card">
            <img src="{{ related.featured_image | img_url: '400x' }}" alt="{{ related.title }}" loading="lazy">
            <h3>{{ related.title }}</h3>
            <p class="price">{{ related.price | money }}</p>
          </a>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

<style>
  .product-page-wrapper {
    max-width: var(--page-width, 1400px);
    margin: 0 auto;
    padding: 2rem;
  }

  .product-main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  /* Product Gallery */
  .product-gallery {
    position: sticky;
    top: 100px;
  }

  .gallery-main {
    margin-bottom: 1rem;
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1;
  }

  .gallery-main img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-thumbnails {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 0.5rem;
  }

  .thumbnail {
    border-radius: 8px;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.2s;
    aspect-ratio: 1;
    object-fit: cover;
  }

  .thumbnail:hover,
  .thumbnail.active {
    border-color: var(--color-accent, #000);
  }

  /* Product Details */
  .product-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  .product-vendor {
    color: #6b7280;
    margin: 0 0 1.5rem 0;
  }

  .product-price-section {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .product-price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-accent, #000);
  }

  .product-compare-price {
    font-size: 1.5rem;
    color: #9ca3af;
    text-decoration: line-through;
  }

  .product-savings {
    background: #10b981;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .product-availability {
    margin: 0 0 1.5rem 0;
    font-weight: 600;
  }

  .product-availability.in-stock {
    color: #10b981;
  }

  .product-availability.out-of-stock {
    color: #ef4444;
  }

  .product-description {
    margin: 2rem 0;
    line-height: 1.7;
    color: #374151;
  }

  /* Product Form */
  .product-form-wrapper {
    margin: 2rem 0;
  }

  .product-options {
    margin-bottom: 1.5rem;
  }

  .product-options label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .variant-select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 1rem;
    background: white;
    cursor: pointer;
  }

  .variant-select:focus {
    outline: none;
    border-color: var(--color-accent, #000);
  }

  .quantity-wrapper {
    margin-bottom: 1.5rem;
  }

  .quantity-wrapper label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .quantity-selector {
    display: flex;
    align-items: center;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    width: fit-content;
  }

  .qty-btn {
    padding: 0.75rem 1.25rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .qty-btn:hover {
    background: #f3f4f6;
  }

  .quantity-input {
    width: 60px;
    text-align: center;
    border: none;
    border-left: 2px solid #e5e7eb;
    border-right: 2px solid #e5e7eb;
    padding: 0.75rem 0.5rem;
    font-size: 1rem;
  }

  .quantity-input:focus {
    outline: none;
  }

  .btn-add-to-cart {
    width: 100%;
    padding: 1.25rem 2rem;
    background: var(--color-accent, #000);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.125rem;
    font-weight: 700;
    cursor: pointer;
    transition: opacity 0.2s;
    margin-bottom: 1rem;
  }

  .btn-add-to-cart:hover:not(:disabled) {
    opacity: 0.9;
  }

  .btn-add-to-cart:disabled {
    background: #9ca3af;
    cursor: not-allowed;
  }

  .product-share {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .product-share a {
    color: #6b7280;
    transition: color 0.2s;
  }

  .product-share a:hover {
    color: var(--color-accent, #000);
  }

  /* Related Products */
  .related-products {
    margin-top: 4rem;
  }

  .related-products h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 2rem;
  }

  .product-card {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  .product-card img {
    width: 100%;
    border-radius: 12px;
    margin-bottom: 1rem;
    aspect-ratio: 1;
    object-fit: cover;
  }

  .product-card h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.125rem;
  }

  .product-card .price {
    font-weight: 700;
    color: var(--color-accent, #000);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .product-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-gallery {
      position: static;
    }

    .product-title {
      font-size: 1.75rem;
    }

    .product-price {
      font-size: 1.5rem;
    }

    .product-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
</style>

<script>
  function changeMainImage(imageUrl) {
    document.getElementById('main-product-image').src = imageUrl;
    
    // Update active thumbnail
    document.querySelectorAll('.thumbnail').forEach(thumb => {
      thumb.classList.remove('active');
    });
    event.target.classList.add('active');
  }

  function increaseQuantity() {
    const input = document.getElementById('quantity');
    input.value = parseInt(input.value) + 1;
  }

  function decreaseQuantity() {
    const input = document.getElementById('quantity');
    if (parseInt(input.value) > 1) {
      input.value = parseInt(input.value) - 1;
    }
  }

  // Update price when variant changes
  document.getElementById('variant-select')?.addEventListener('change', function(e) {
    const selectedOption = e.target.options[e.target.selectedIndex];
    const button = document.querySelector('.btn-add-to-cart');
    
    if (selectedOption.disabled) {
      button.disabled = true;
      button.textContent = 'Sold Out';
    } else {
      button.disabled = false;
      const price = selectedOption.text.split(' - ')[1];
      button.textContent = `Add to Cart - ${price}`;
    }
  });

  // Add to cart success feedback
  document.getElementById('product-form').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    
    fetch('/cart/add.js', {
      method: 'POST',
      body: formData
    })
    .then(response => response.json())
    .then(data => {
      // Update cart count
      fetch('/cart.js')
        .then(response => response.json())
        .then(cart => {
          document.querySelector('.cart-count').textContent = cart.item_count;
          document.querySelector('.cart-count').style.display = 'flex';
        });
      
      // Show success message
      const button = document.querySelector('.btn-add-to-cart');
      const originalText = button.textContent;
      button.textContent = '✓ Added to Cart!';
      button.style.background = '#10b981';
      
      setTimeout(() => {
        button.textContent = originalText;
        button.style.background = '';
      }, 2000);
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error adding to cart. Please try again.');
    });
  });
</script>

{% schema %}
{
  "name": "Cannabis Product",
  "settings": [
    {
      "type": "text",
      "id": "variant_label",
      "label": "Variant Label",
      "default": "Size"
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show Social Share Buttons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_related_products",
      "label": "Show Related Products",
      "default": true
    },
    {
      "type": "textarea",
      "id": "disclaimer_text",
      "label": "Compliance Disclaimer",
      "default": "These statements have not been evaluated by the FDA. This product is not intended to diagnose, treat, cure, or prevent any disease."
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
