<script>
  (function() {
    const COOKIE_NAME = 'age_verified';
    const COOKIE_DAYS = {{ section.settings.cookie_days | default: 30 }};
    const MIN_AGE = {{ section.settings.minimum_age | default: 21 }};
    const overlay = document.getElementById('age-gate-overlay');

    // Check if already verified
    function isAgeVerified() {
      return document.cookie.split(';').some(c => c.trim().startsWith(COOKIE_NAME + '='));
    }

    // Set verification cookie
    function setAgeVerifiedCookie(days) {
      const date = new Date();
      date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
      document.cookie = `${COOKIE_NAME}=true; expires=${date.toUTCString()}; path=/; SameSite=Lax`;
    }

    // Hide overlay
    function hideAgeGate() {
      overlay.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Show overlay
    function showAgeGate() {
      overlay.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }

    // Simple yes/no verification
    window.verifyAge = function(isOfAge) {
      if (isOfAge) {
        const remember = document.getElementById('remember-age');
        if (remember && remember.checked) {
          setAgeVerifiedCookie(COOKIE_DAYS);
        } else {
          // Session only
          sessionStorage.setItem(COOKIE_NAME, 'true');
        }
        hideAgeGate();
      } else {
        document.getElementById('age-gate-error').style.display = 'block';
        // Optionally redirect to a different page
        // window.location.href = 'https://google.com';
      }
    };

    // Date-based verification
    window.verifyAgeByDate = function() {
      const month = document.getElementById('age-month').value;
      const day = document.getElementById('age-day').value;
      const year = document.getElementById('age-year').value;

      if (!month || !day || !year) {
        document.getElementById('age-gate-error').style.display = 'block';
        document.getElementById('age-gate-error').textContent = 'Please enter a complete date of birth.';
        return;
      }

      const birthDate = new Date(year, month - 1, day);
      const today = new Date();
      let age = today.getFullYear() - birthDate.getFullYear();
      const monthDiff = today.getMonth() - birthDate.getMonth();

      if (monthDiff < 0 || (monthDiff === 0 && today.getDate() < birthDate.getDate())) {
        age--;
      }

      if (age >= MIN_AGE) {
        const remember = document.getElementById('remember-age');
        if (remember && remember.checked) {
          setAgeVerifiedCookie(COOKIE_DAYS);
        } else {
          sessionStorage.setItem(COOKIE_NAME, 'true');
        }
        hideAgeGate();
      } else {
        document.getElementById('age-gate-error').style.display = 'block';
        document.getElementById('age-gate-error').textContent = `Sorry, you must be ${MIN_AGE} or older to access this site.`;
      }
    };

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      if (isAgeVerified() || sessionStorage.getItem(COOKIE_NAME)) {
        hideAgeGate();
      } else {
        showAgeGate();
      }
    });
  })();
</script>

