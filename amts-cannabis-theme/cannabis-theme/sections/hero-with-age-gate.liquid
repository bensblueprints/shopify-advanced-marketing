{% comment %}
  Hero Section with Age Verification Gate
  Cannabis-compliant landing section with age verification
{% endcomment %}

{% assign age_verified = false %}
{% comment %} Check if age verification cookie exists - this will be handled by JS {% endcomment %}

<section class="hero-section" id="hero-section">
  {% comment %} Age Gate Overlay {% endcomment %}
  <div class="age-gate-overlay" id="age-gate-overlay">
    <div class="age-gate-modal">
      <div class="age-gate-content">
        {% if section.settings.logo %}
          <img
            src="{{ section.settings.logo | img_url: '200x' }}"
            alt="{{ shop.name }}"
            class="age-gate-logo"
            loading="eager"
          >
        {% else %}
          <div class="age-gate-icon">
            <svg width="64" height="64" viewBox="0 0 64 64" fill="none">
              <circle cx="32" cy="32" r="28" stroke="currentColor" stroke-width="3"/>
              <path d="M32 20v16M32 44h.01" stroke="currentColor" stroke-width="4" stroke-linecap="round"/>
            </svg>
          </div>
        {% endif %}

        <h2 class="age-gate-title">{{ section.settings.age_gate_title | default: 'Age Verification Required' }}</h2>
        <p class="age-gate-subtitle">{{ section.settings.age_gate_subtitle | default: 'You must be 21 years or older to enter this website.' }}</p>

        <div class="age-gate-form">
          {% if section.settings.age_verification_type == 'simple' %}
            <p class="age-gate-question">{{ section.settings.age_gate_question | default: 'Are you 21 years of age or older?' }}</p>
            <div class="age-gate-buttons">
              <button class="btn-age-yes" onclick="verifyAge(true)">
                {{ section.settings.yes_button_text | default: 'Yes, I am 21+' }}
              </button>
              <button class="btn-age-no" onclick="verifyAge(false)">
                {{ section.settings.no_button_text | default: 'No, I am under 21' }}
              </button>
            </div>
          {% elsif section.settings.age_verification_type == 'date' %}
            <p class="age-gate-question">Please enter your date of birth:</p>
            <div class="age-gate-date-inputs">
              <div class="date-input-group">
                <label for="age-month">Month</label>
                <select id="age-month" class="date-input">
                  <option value="">MM</option>
                  {% for i in (1..12) %}
                    <option value="{{ i }}">{{ i | prepend: '0' | slice: -2, 2 }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="date-input-group">
                <label for="age-day">Day</label>
                <select id="age-day" class="date-input">
                  <option value="">DD</option>
                  {% for i in (1..31) %}
                    <option value="{{ i }}">{{ i | prepend: '0' | slice: -2, 2 }}</option>
                  {% endfor %}
                </select>
              </div>
              <div class="date-input-group">
                <label for="age-year">Year</label>
                <select id="age-year" class="date-input">
                  <option value="">YYYY</option>
                  {% assign current_year = 'now' | date: '%Y' | plus: 0 %}
                  {% assign start_year = current_year | minus: 100 %}
                  {% for year in (start_year..current_year) reversed %}
                    <option value="{{ year }}">{{ year }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            <button class="btn-age-verify" onclick="verifyAgeByDate()">
              Verify Age
            </button>
          {% endif %}

          <div class="age-gate-error" id="age-gate-error" style="display: none;">
            {{ section.settings.age_gate_error | default: 'Sorry, you must be 21 or older to access this site.' }}
          </div>
        </div>

        <p class="age-gate-disclaimer">
          {{ section.settings.age_gate_disclaimer | default: 'By entering this site, you agree to our Terms of Service and Privacy Policy.' }}
        </p>

        {% if section.settings.show_remember_checkbox %}
          <label class="age-gate-remember">
            <input type="checkbox" id="remember-age" checked>
            <span class="checkbox-custom"></span>
            Remember me for {{ section.settings.cookie_days | default: 30 }} days
          </label>
        {% endif %}
      </div>
    </div>
  </div>

  {% comment %} Hero Content {% endcomment %}
  <div class="hero-wrapper" id="hero-wrapper">
    {% if section.settings.background_image %}
      <div class="hero-background">
        <img
          src="{{ section.settings.background_image | img_url: '2000x' }}"
          alt=""
          class="hero-bg-image"
          loading="eager"
        >
        <div class="hero-overlay" style="background: {{ section.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }};"></div>
      </div>
    {% elsif section.settings.background_video %}
      <div class="hero-background">
        <video class="hero-bg-video" autoplay muted loop playsinline>
          <source src="{{ section.settings.background_video }}" type="video/mp4">
        </video>
        <div class="hero-overlay" style="background: {{ section.settings.overlay_color | default: 'rgba(0,0,0,0.5)' }};"></div>
      </div>
    {% else %}
      <div class="hero-background hero-gradient" style="background: {{ section.settings.background_gradient | default: 'linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%)' }};"></div>
    {% endif %}

    <div class="hero-content" style="text-align: {{ section.settings.content_alignment | default: 'center' }};">
      {% if section.settings.pre_heading %}
        <p class="hero-preheading">{{ section.settings.pre_heading }}</p>
      {% endif %}

      <h1 class="hero-heading" style="color: {{ section.settings.heading_color | default: '#ffffff' }};">
        {{ section.settings.heading | default: 'Premium Cannabis Products' }}
      </h1>

      {% if section.settings.subheading %}
        <p class="hero-subheading" style="color: {{ section.settings.subheading_color | default: '#ffffff' }};">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      <div class="hero-buttons">
        {% if section.settings.button_1_text %}
          <a
            href="{{ section.settings.button_1_link | default: routes.all_products_collection_url }}"
            class="btn-hero btn-primary"
            style="background: {{ section.settings.button_1_bg | default: '#10b981' }}; color: {{ section.settings.button_1_color | default: '#ffffff' }};"
          >
            {{ section.settings.button_1_text }}
          </a>
        {% endif %}

        {% if section.settings.button_2_text %}
          <a
            href="{{ section.settings.button_2_link | default: '#' }}"
            class="btn-hero btn-secondary"
            style="border-color: {{ section.settings.button_2_border | default: '#ffffff' }}; color: {{ section.settings.button_2_color | default: '#ffffff' }};"
          >
            {{ section.settings.button_2_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_scroll_indicator %}
        <div class="hero-scroll-indicator">
          <span>Scroll to explore</span>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M12 5v14M19 12l-7 7-7-7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_trust_badges %}
      <div class="hero-trust-badges">
        <div class="trust-badge">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
