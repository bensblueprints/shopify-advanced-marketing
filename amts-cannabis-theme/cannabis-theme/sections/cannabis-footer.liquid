{% comment %}
  Cannabis Footer Section
  Footer with compliance disclaimers, navigation, and legal information
{% endcomment %}

<footer class="cannabis-footer" id="footer-{{ section.id }}">
  {% comment %} Main Footer Content {% endcomment %}
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-grid">
        {% comment %} Brand Column {% endcomment %}
        <div class="footer-brand">
          {% if section.settings.logo %}
            <a href="/" class="footer-logo">
              <img
                src="{{ section.settings.logo | img_url: '200x' }}"
                alt="{{ shop.name }}"
                loading="lazy"
              >
            </a>
          {% else %}
            <a href="/" class="footer-logo-text">{{ shop.name }}</a>
          {% endif %}

          {% if section.settings.description %}
            <p class="footer-description">{{ section.settings.description }}</p>
          {% endif %}

          {% comment %} Social Links {% endcomment %}
          {% if section.settings.show_social %}
            <div class="footer-social">
              {% if section.settings.social_instagram %}
                <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
                  <svg viewBox="0 0 24 24" fill="none"><rect x="2" y="2" width="20" height="20" rx="5" stroke="currentColor" stroke-width="2"/><circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/><circle cx="18" cy="6" r="1" fill="currentColor"/></svg>
                </a>
              {% endif %}
              {% if section.settings.social_twitter %}
                <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </a>
              {% endif %}
              {% if section.settings.social_facebook %}
                <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3V2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </a>
              {% endif %}
              {% if section.settings.social_youtube %}
                <a href="{{ section.settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M22.54 6.42a2.78 2.78 0 00-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 00-1.94 2A29 29 0 001 11.75a29 29 0 00.46 5.33A2.78 2.78 0 003.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 001.94-2 29 29 0 00.46-5.25 29 29 0 00-.46-5.33z" stroke="currentColor" stroke-width="2"/><path d="M9.75 15.02l5.75-3.27-5.75-3.27v6.54z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        {% comment %} Navigation Columns {% endcomment %}
        {% for block in section.blocks %}
          {% if block.type == 'menu' %}
            <div class="footer-nav" {{ block.shopify_attributes }}>
              <h4 class="footer-nav-title">{{ block.settings.title }}</h4>
              <ul class="footer-nav-list">
                {% assign menu = linklists[block.settings.menu] %}
                {% for link in menu.links %}
                  <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                {% endfor %}
              </ul>
            </div>
          {% endif %}
        {% endfor %}

        {% comment %} Contact Column {% endcomment %}
        {% if section.settings.show_contact %}
          <div class="footer-contact">
            <h4 class="footer-nav-title">Contact Us</h4>
            <ul class="footer-contact-list">
              {% if section.settings.contact_email %}
                <li>
                  <svg viewBox="0 0 24 24" fill="none"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M22 6l-10 7L2 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
                </li>
              {% endif %}
              {% if section.settings.contact_phone %}
                <li>
                  <svg viewBox="0 0 24 24" fill="none"><path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72c.127.96.361 1.903.7 2.81a2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0122 16.92z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  <a href="tel:{{ section.settings.contact_phone }}">{{ section.settings.contact_phone }}</a>
                </li>
              {% endif %}
              {% if section.settings.contact_address %}
                <li>
                  <svg viewBox="0 0 24 24" fill="none"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><circle cx="12" cy="10" r="3" stroke="currentColor" stroke-width="2"/></svg>
                  <span>{{ section.settings.contact_address }}</span>
                </li>
              {% endif %}
            </ul>

            {% if section.settings.show_hours %}
              <div class="footer-hours">
                <h5>Business Hours</h5>
                <p>{{ section.settings.business_hours }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% comment %} Newsletter Column {% endcomment %}
        {% if section.settings.show_newsletter %}
          <div class="footer-newsletter">
            <h4 class="footer-nav-title">{{ section.settings.newsletter_title | default: 'Stay Updated' }}</h4>
            <p class="newsletter-description">{{ section.settings.newsletter_description }}</p>

            {% form 'customer', id: 'footer-newsletter-form' %}
              <div class="newsletter-form">
                <input
                  type="email"
                  name="contact[email]"
                  placeholder="Enter your email"
                  required
                  class="newsletter-input"
                  autocomplete="email"
                >
                <input type="hidden" name="contact[tags]" value="newsletter">
                <button type="submit" class="newsletter-button">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </button>
              </div>
            {% endform %}

            <p class="newsletter-note">{{ section.settings.newsletter_note }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  {% comment %} Trust Badges {% endcomment %}
  {% if section.settings.show_trust_badges %}
    <div class="footer-trust">
      <div class="footer-container">
        <div class="trust-badges">
          <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="none"><path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Lab Tested</span>
          </div>
          <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="none"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Secure Checkout</span>
          </div>
          <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="none"><path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Discreet Shipping</span>
          </div>
          <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="none"><path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Fast Delivery</span>
          </div>
          <div class="trust-badge">
            <svg viewBox="0 0 24 24" fill="none"><path d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            <span>Easy Returns</span>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  {% comment %} Compliance Disclaimer {% endcomment %}
  <div class="footer-compliance">
    <div class="footer-container">
      <div class="compliance-content">
        <div class="compliance-icon">
          <svg viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/><path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round"/></svg>
        </div>
        <div class="compliance-text">
          <h5>{{ section.settings.compliance_title | default: 'Important Notice' }}</h5>
          <p>{{ section.settings.compliance_text | default: 'These statements have not been evaluated by the Food and Drug Administration. This product is not intended to diagnose, treat, cure, or prevent any disease. Products are intended for use by adults 21 years of age or older. Keep out of reach of children. Consult your physician before use if you are pregnant, nursing, or taking any medications.' }}</p>
        </div>
      </div>

      {% if section.settings.show_state_disclaimer %}
        <div class="state-disclaimer">
          <p>{{ section.settings.state_disclaimer | default: 'Cannabis products are legal in select states. Please verify the laws in your state before ordering. We do not ship to states where cannabis products are prohibited.' }}</p>
        </div>
      {% endif %}

      {% comment %} Age Verification Notice {% endcomment %}
      <div class="age-notice">
        <span class="age-badge">21+</span>
        <p>{{ section.settings.age_notice | default: 'You must be 21 years or older to purchase products from this website.' }}</p>
      </div>
    </div>
  </div>

  {% comment %} Copyright Bar {% endcomment %}
  <div class="footer-bottom">
    <div class="footer-container">
      <div class="footer-bottom-content">
        <div class="footer-copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        </div>

        {% if section.settings.show_legal_links %}
          <nav class="footer-legal-links">
            {% if section.settings.privacy_link %}
              <a href="{{ section.settings.privacy_link }}">Privacy Policy</a>
            {% endif %}
            {% if section.settings.terms_link %}
              <a href="{{ section.settings.terms_link }}">Terms of Service</a>
            {% endif %}
            {% if section.settings.refund_link %}
              <a href="{{ section.settings.refund_link }}">Refund Policy</a>
            {% endif %}
            {% if section.settings.shipping_link %}
              <a href="{{ section.settings.shipping_link }}">Shipping Policy</a>
            {% endif %}
          </nav>
        {% endif %}

        {% if section.settings.show_payment_icons %}
          <div class="footer-payment-icons">
            {{ shop.enabled_payment_types | payment_type_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>
  .cannabis-footer {
    background: {{ section.settings.background_color | default: '#1a1a2e' }};
    color: {{ section.settings.text_color | default: 'rgba(255, 255, 255, 0.8)' }};
  }

  .footer-container {
    max-width: var(--page-width, 1400px);
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Main Footer */
  .footer-main {
    padding: 4rem 0 3rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(auto-fit, minmax(150px, 1fr));
    gap: 3rem;
  }

  /* Brand Column */
  .footer-logo img {
    max-height: 50px;
    width: auto;
  }

  .footer-logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    text-decoration: none;
  }

  .footer-description {
    margin: 1rem 0;
    font-size: 0.9375rem;
    line-height: 1.6;
    max-width: 300px;
  }

  .footer-social {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .footer-social a {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.2s;
  }

  .footer-social a:hover {
    background: {{ section.settings.accent_color | default: '#10b981' }};
    transform: translateY(-2px);
  }

  .footer-social svg {
    width: 18px;
    height: 18px;
  }

  /* Navigation Columns */
  .footer-nav-title {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
    margin: 0 0 1.25rem;
  }

  .footer-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav-list li {
    margin-bottom: 0.75rem;
  }

  .footer-nav-list a {
    color: inherit;
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
  }

  .footer-nav-list a:hover {
    color: {{ section.settings.accent_color | default: '#10b981' }};
  }

  /* Contact Column */
  .footer-contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-contact-list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
    font-size: 0.9375rem;
  }

  .footer-contact-list svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    margin-top: 2px;
    color: {{ section.settings.accent_color | default: '#10b981' }};
  }

  .footer-contact-list a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-contact-list a:hover {
    color: {{ section.settings.accent_color | default: '#10b981' }};
  }

  .footer-hours {
    margin-top: 1.5rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-hours h5 {
    font-size: 0.8125rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    color: white;
  }

  .footer-hours p {
    margin: 0;
    font-size: 0.875rem;
  }

  /* Newsletter */
  .newsletter-description {
    font-size: 0.9375rem;
    margin: 0 0 1rem;
    line-height: 1.5;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: white;
    font-size: 0.9375rem;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: {{ section.settings.accent_color | default: '#10b981' }};
  }

  .newsletter-button {
    width: 44px;
    height: 44px;
    background: {{ section.settings.accent_color | default: '#10b981' }};
    border: none;
    border-radius: 8px;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .newsletter-button:hover {
    transform: translateY(-2px);
  }

  .newsletter-button svg {
    width: 18px;
    height: 18px;
  }

  .newsletter-note {
    margin: 0.75rem 0 0;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Trust Badges */
  .footer-trust {
    padding: 2rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .trust-badges {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
  }

  .trust-badge svg {
    width: 24px;
    height: 24px;
    color: {{ section.settings.accent_color | default: '#10b981' }};
  }

  /* Compliance Section */
  .footer-compliance {
    padding: 2rem 0;
    background: rgba(0, 0, 0, 0.2);
  }

  .compliance-content {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border-left: 4px solid {{ section.settings.accent_color | default: '#10b981' }};
    margin-bottom: 1.5rem;
  }

  .compliance-icon svg {
    width: 32px;
    height: 32px;
    color: {{ section.settings.accent_color | default: '#10b981' }};
    flex-shrink: 0;
  }

  .compliance-text h5 {
    font-size: 1rem;
    font-weight: 700;
    color: white;
    margin: 0 0 0.5rem;
  }

  .compliance-text p {
    margin: 0;
    font-size: 0.8125rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.7);
  }

  .state-disclaimer {
    padding: 1rem 1.5rem;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(239, 68, 68, 0.3);
    margin-bottom: 1.5rem;
  }

  .state-disclaimer p {
    margin: 0;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .age-notice {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
  }

  .age-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: {{ section.settings.accent_color | default: '#10b981' }};
    border-radius: 50%;
    font-size: 1rem;
    font-weight: 800;
    color: white;
    flex-shrink: 0;
  }

  .age-notice p {
    margin: 0;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.8);
  }

  /* Copyright Bar */
  .footer-bottom {
    padding: 1.5rem 0;
  }

  .footer-bottom-content {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .footer-copyright p {
    margin: 0;
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .footer-legal-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .footer-legal-links a {
    font-size: 0.8125rem;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal-links a:hover {
    color: white;
  }

  .footer-payment-icons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .footer-payment-icons svg {
    height: 24px;
    width: auto;
    opacity: 0.6;
  }

  /* Mobile Responsive */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer-brand {
      grid-column: span 2;
    }
  }

  @media (max-width: 640px) {
    .footer-container {
      padding: 0 1rem;
    }

    .footer-main {
      padding: 2.5rem 0 2rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-brand {
      grid-column: span 1;
      text-align: center;
    }

    .footer-description {
      max-width: none;
    }

    .footer-social {
      justify-content: center;
    }

    .footer-nav,
    .footer-contact,
    .footer-newsletter {
      text-align: center;
    }

    .footer-contact-list li {
      justify-content: center;
    }

    .trust-badges {
      gap: 1rem;
    }

    .trust-badge {
      flex-direction: column;
      gap: 0.25rem;
      font-size: 0.75rem;
    }

    .compliance-content {
      flex-direction: column;
      text-align: center;
    }

    .compliance-icon svg {
      margin: 0 auto;
    }

    .age-notice {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal-links {
      justify-content: center;
    }

    .footer-payment-icons {
      justify-content: center;
    }
  }
</style>

{% schema %}
{
  "name": "Cannabis Footer",
  "tag": "section",
  "class": "cannabis-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Brand"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium cannabis products, lab-tested for quality and potency. Serving customers with excellence since 2020."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show Social Links",
      "default": true
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube URL"
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
